{
  "compilerOptions": {
    "outDir": "build",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "alwaysStrict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationDir": "build/types",
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "node_modules",
  ]
}